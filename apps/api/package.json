{
  "name": "@fast-feet/api",
  "version": "1.0.0",
  "private": true,
  "description": "Fast Feet API built with NestJS, following DDD and Clean Architecture principles.",
  "author": "Matheus Teodoro Garcia <https://github.com/MatheusTG>",
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.3",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "zod": "catalog:zod",
    "zod-validation-error": "^5.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.3.0",
    "@fast-feet/config": "workspace:*",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/core": "^1.15.11",
    "@types/express": "^5.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "unplugin-swc": "^1.5.9"
  }
}
