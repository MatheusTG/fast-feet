generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  DELIVERYMAN
}

model User {
  id        String    @id @default(uuid())
  cpf       String    @unique
  name      String
  password  String
  role      UserRole  @default(DELIVERYMAN)
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")

  @@map("users")
}
